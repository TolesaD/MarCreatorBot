{
    "name": "Botomics Wallet",
    "short_name": "Botomics",
    "description": "Manage your BOM wallet and premium subscription",
    "version": "1.0.0",
    "manifest_version": 1,
    "theme_color": "#667eea",
    "background_color": "#667eea",
    "display": "standalone",
    "start_url": "/wallet/",
    "scope": "/wallet/",
    "icons": [
        {
            "src": "icon-192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "icon-512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "permissions": [
        "clipboard-read",
        "clipboard-write"
    ],
    "related_applications": [],
    "prefer_related_applications": false
}